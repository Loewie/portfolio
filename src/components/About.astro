---
import Section from './Section.astro';

interface Props {
	id: string;
    header?: {
        icon?: string;
        title: string;
    };
    paragraphs: string[];
    footer?: {
        icon?: string;
        iconClass?: string;
    };
}

const { 
    id,
    header,
    paragraphs,
    footer,
} = Astro.props;
---
<Section {id} {header} {footer}>
    { paragraphs && paragraphs.map(paragraph => <p class="pb-4" data-animate set:html={paragraph}/> ) }
</Section>